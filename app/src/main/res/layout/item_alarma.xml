<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemAlarmaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">
    <!--para poder inflarle no es necesario el id-->
    <!--layout solo para el ITEM-->

    <!--para poder poner lo svalores en las cajas de texto es necesario el ID-->

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.20">

        <TextView
            android:id="@+id/lblTituloAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/lblHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            android:text="" />
    </LinearLayout>

    <Button
        android:id="@+id/btnActiveInactive"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#0766ff"
        android:onClick="cambiarImagen"
        android:layout_weight="0.70" />
    <!--android:drawableRight="@drawable/btnencender"-->


</LinearLayout>
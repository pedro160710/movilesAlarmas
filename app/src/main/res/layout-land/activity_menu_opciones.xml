<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#09c1d6"
    tools:context="ec.edu.epn.alarmas.MenuOpciones">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:textColor="#011141"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#83abe1"
    android:gravity="center_horizontal"
    android:weightSum="1">

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/btnReloj"
        android:onClick="abrirReloj"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.06" />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/btnAlarma"
        android:onClick="abrirAlarmas"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.06" />
    <Button
        android:layout_width="120dp"
        android:id="@+id/btnCronometro"
        android:layout_height="wrap_content"
        android:text="@string/btnCronometro"
        android:onClick="abrirCronometr"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        />

</LinearLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreReloj"/>


</LinearLayout>
